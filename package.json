{
    "name": "malon-backend",
    "version": "1.0.0",
    "description": "Backend API for Complaint Management System",
    "engines": {
        "node": "v16.14.0",
        "npm": "8.3.1"
    },
    "main": "index.ts",
    "scripts": {
        "devstart": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "start": "tsc && node --unhandled-rejections=strict ./dist/index.js",
        "test": "mocha -r ts-node/register ./src/*/*/*.test.ts --timeout 10000",
        "seed": "tsc seed.ts --outdir ./seed && node --unhandled-rejections=strict ./seed/seed.js",
        "debug": "export DEBUG=* && npm run start",
        "format": "npx prettier --write .",
        "lint": "npx eslint . --fix"
    },
    "keywords": [
        "Customer",
        "Relationship",
        "Management",
        "Business",
        "Automation",
        "Backoffice",
        "Operation"
    ],
    "author": "Adeleke Bright",
    "license": "ISC",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.54.1",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "helmet": "^5.0.2",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.2.7",
        "morgan": "^1.10.0",
        "multer": "^1.4.4",
        "winston": "^3.6.0"
    },
    "devDependencies": {
        "@ngneat/falso": "^3.1.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/chai": "^4.3.0",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/mocha": "^9.1.0",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/sinon": "^10.0.11",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "mocha": "^9.2.2",
        "prettier": "^2.6.1",
        "sinon": "^13.0.1",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.2"
    }
}
